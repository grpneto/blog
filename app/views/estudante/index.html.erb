<div class="container">
    <h2 style="text-align:center;">Informações dos Estudantes</h2>
    <hr>
    <% @estudantes.each do |estudante| %>
        <div class="accordion" id="accordionExample">
            <div class="accordion-item">
                <h2 class="accordion-header" id="heading<%= estudante[:nome] %>">
                    <button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapse<%= estudante[:nome] %>" aria-expanded="false" aria-controls="collapse<%= estudante[:nome] %>">
                        <%= estudante[:nome] %>
                    </button>
                </h2>
                <div id="collapse<%= estudante[:nome] %>" class="accordion-collapse collapse" aria-labelledby="heading<%= estudante[:nome] %>" data-bs-parent="#accordionExample">
                    <div class="accordion-body">
                        <p><%= estudante[:idade] %> anos</p>
                        <p><%= estudante[:curso] %></p>
                    </div>
                </div>
            </div>
        </div>
    <% end %>

    <%# <a href="/home">Home</a> %>
    <%= link_to "Home", home_path %>
</div>